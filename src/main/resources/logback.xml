<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %highlight([%-5level]) %cyan(%d{YYYY-MM-dd HH:mm:ss}) %yellow([%t]) %green(%logger{36}.%M.%L:) %m%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>